<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<DialogPane 
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="john.tutorial_projects.javafx.ui_config.DialogController">
	<headerText>
	</headerText>
	<content>
		<GridPane vgap="10" hgap="10">
			<Label text="Short Description : " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
			<TextField fx:id="shortDescriptionInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
			<Label text="Details : " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
			<TextArea fx:id="detailsInput" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
			<Label text="Deadline : " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
			<DatePicker fx:id="dateInput" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
		</GridPane>
	</content>
</DialogPane>

